execute pathogen#infect()

set runtimepath+=/usr/share/vim/addons
set nocompatible
set backspace=indent,eol,start
set nobackup
set history=100
set ruler
set showcmd
set incsearch
set mouse=a
set hlsearch
set tabstop=4
set shiftwidth=4
set expandtab
set smarttab
set autoindent
set smartindent
set spelllang=en
set noswapfile
set autoread

map Q gq
colorscheme default
syntax on
filetype plugin indent on
